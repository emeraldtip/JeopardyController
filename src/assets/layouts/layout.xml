<GridLayout id="layout"
	layout_height="match_parent"
	layout_width="match_parent"
	column-mode="weight"
	column-weight="0.25"
	row-mode="weight"
	row-weight="0.25">
		<PushButton id="accept_answers"
			layout_width="match_parent"
			layout_height="wrap_content"
			text="Accept answers"/>
		<PushButton id="stop_accepting"
			layout_width="match_parent"
			layout_height="wrap_content"
			text="Stop accepting answers"/>
		<PushButton id="cancel_answer"
			layout_width="match_parent"
			layout_height="wrap_content"
			text="Cancel answer"/>
		<PushButton id="testmode"
			layout_width="match_parent"
			layout_height="wrap_content"
			text="Testmode"/>
</GridLayout>
<GridLayout id="layout2"
	layout_height="match_parent"
	layout_width="match_parent"
	margin-top="50%"
	column-mode="weight"
	column-weight="0.5"
	row-mode="weight"
	row-weight="0.5">
		<TextView id="rawtitle"
			layout_width="match_parent"
			layout_height="wrap_content"
			text="Raw output:"/>
		<TextView id="statustitle"
			layout_width="match_parent"
			layout_height="wrap_content"
			text="Status:"/>
		<TextView id="rawout"
			layout_width="match_parent"
			layout_height="wrap_content"
			text="No serial port has been opened"/>
		<TextView id="statusout"
			layout_width="match_parent"
			layout_height="wrap_content"
			text="Waiting for initialization..."/>
</GridLayout>