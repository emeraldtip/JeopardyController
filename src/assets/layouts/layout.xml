<GridLayout id="layout"
	layout_height="match_parent"
	layout_width="match_parent"
	column-mode="weight"
	column-weight="0.25"
	row-mode="weight"
	row-weight="0.25">
		<PushButton id="accept_answers"
			layout_width="match_parent"
			layout_height="wrap_content"
			text="Accept answers"/>
		<PushButton id="stop_accepting"
			layout_width="match_parent"
			layout_height="wrap_content"
			text="Stop accepting answers"/>
		<PushButton id="cancel_answer"
			layout_width="match_parent"
			layout_height="wrap_content"
			text="Cancel answer"/>
		<PushButton id="testmode"
			layout_width="match_parent"
			layout_height="wrap_content"
			text="Testmode"/>
</GridLayout>
<GridLayout id="layout2"
	layout_height="match_parent"
	layout_width="match_parent"
	margin-top="25%"
	column-mode="weight"
	column-weight="0.5"
	row-mode="weight"
	row-weight="0.5"
	background-color="#323232">
		<TextView id="portname"
			layout_width="match_parent"
			layout_height="wrap_content"
			text="Selected port:"
			border="none"/>
		<RelativeLayout
			layout_width = "mp"
			layout_height = "wc"
			orientation = "vertical">
			<DropDownList id="portselector"
				layout_width = "mp"
				layout_height= "wc"
				/>
			<PushButton id="rescan"
			margin-top="325dp"
			padding = "10px"
			text = "Scan again"
			/>
		</RelativeLayout>
		<TextView id="rawtitle"
			layout_width="match_parent"
			layout_height="match_parent"
			clip="auto"
			text="Raw output:"/>
		<TextView id="statustitle"
			layout_width="match_parent"
			layout_height="wrap_content"
			text="Status:"/>
</GridLayout>